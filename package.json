{
    "name": "bookshelf",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "main": "index.js",
    "scripts": {
        "serve:all": "pnpm run start:api & pnpm run start:web",
        "start:web": "pnpm exec nx dev web",
        "start:api": "pnpm exec nx start api",
        "type-check:web": "pnpm exec nx type-check web",
        "gql:watch": "graphql-code-generator --config codegen.ts --watch",
        "----DEPLOY SECTION----": "----------------------",
        "cd:api": "pnpm run cd:db-push && pnpm run db:seed && pnpm run build:api --prod",
        "build:api": "pnpm exec nx build api",
        "cd:web": "pnpm run build:web --prod",
        "build:web": "pnpm exec nx build web",
        "cd:db-push": "pnpm --filter api exec prisma db push  --accept-data-loss && pnpm run db:seed",
        "----DB SECTION----": "------------------------",
        "db:generate": "pnpm --filter api exec prisma generate",
        "db:push": "pnpm --filter api exec prisma db push",
        "db:migrate:dev": "pnpm --filter api exec prisma migrate dev",
        "db:studio": "pnpm --filter api exec prisma studio",
        "db:seed": "pnpm --filter api exec prisma db seed",
        "db:reset": "pnpm --filter api exec prisma migrate reset",
        "----PACKAGES SECTION----": "-------------------------",
        "update:api": "pnpm --filter api update -i --latest",
        "update:web": "pnpm --filter web update -i --latest",
        "----DEVELOPMENT SECTION----": "-------------------------",
        "create:resolver": "pnpm --filter api exec nest g resource users --no-spec",
        "---Format SECTION----": "-------------------------",
        "format": "pnpm --filter web exec prettier --check --ignore-path .gitignore .",
        "format:fix": "pnpm --filter web exec prettier --write --ignore-path .gitignore .",
        "generate": "graphql-codegen"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@graphql-codegen/cli": "^5.0.6",
        "@graphql-codegen/client-preset": "^4.8.1",
        "@graphql-codegen/typescript-react-apollo": "^4.3.2",
        "nx": "^21.0.0"
    },
    "dependencies": {
        "@graphql-codegen/typescript-operations": "^4.6.1",
        "@parcel/watcher": "^2.5.1",
        "typescript": "5.8.3"
    }
}
