{
    "name": "api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "start:migrate:prod": "npx prisma migrate deploy && npm run start:prod",
        "start:prod": "node dist/src/main",
        "build": "rimraf dist && nest build",
        "start": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "lint": "eslint --quiet \"**/*.ts\"",
        "lint:fix": "eslint \"**/*.ts\" --fix",
        "prettier": "prettier --list-different \"**/*.ts\"",
        "prettier:fix": "prettier --write \"**/*.ts\"",
        "format": "npm run lint:fix && npm run prettier:fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "dependencies": {
        "@apollo/server": "^4.12.0",
        "@apollo/subgraph": "2.10.2",
        "@as-integrations/fastify": "^2.1.1",
        "@faker-js/faker": "^9.7.0",
        "@nestjs/apollo": "13.1.0",
        "@nestjs/axios": "^4.0.0",
        "@nestjs/common": "11.1.0",
        "@nestjs/config": "4.0.2",
        "@nestjs/core": "11.1.0",
        "@nestjs/graphql": "13.1.0",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "11.1.0",
        "@nestjs/terminus": "11.0.0",
        "@prisma/client": "6.7.0",
        "@react-email/components": "0.0.38",
        "axios": "^1.9.0",
        "bcryptjs": "^3.0.2",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.2",
        "date-fns": "^4.1.0",
        "express": "^5.1.0",
        "graphql": "16.11.0",
        "helmet": "^8.1.0",
        "passport-jwt": "^4.0.1",
        "passport-magic-login": "^1.2.2",
        "prisma-nestjs-graphql": "^21.1.1",
        "react-email": "4.0.11",
        "reflect-metadata": "0.2.2",
        "resend": "^4.5.1",
        "rimraf": "6.0.1",
        "rxjs": "7.8.2",
        "short-uuid": "^5.2.0",
        "source-map-support": "^0.5.21",
        "uuid": "^11.1.0",
        "zustand": "^5.0.4"
    },
    "devDependencies": {
        "@nestjs/cli": "11.0.7",
        "@nestjs/schematics": "11.0.5",
        "@types/express": "5.0.1",
        "@types/node": "22.15.14",
        "@types/react": "^19.1.3",
        "@typescript-eslint/eslint-plugin": "8.32.0",
        "@typescript-eslint/parser": "8.32.0",
        "copy-webpack-plugin": "^13.0.0",
        "eslint": "9.26.0",
        "eslint-config-prettier": "10.1.2",
        "jest": "29.7.0",
        "prettier": "3.5.3",
        "prisma": "6.7.0",
        "ts-jest": "29.3.2",
        "ts-loader": "^9.5.2",
        "ts-node": "10.9.2",
        "typescript": "5.8.3",
        "webpack": "^5.99.8"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "schema": "prisma/schema.prisma",
        "seed": "ts-node prisma/tools/seed.ts"
    }
}
